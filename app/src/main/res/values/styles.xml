<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/size_14</item>
        <item name="fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleCategoryName20" parent="StyleTitle14">
        <item name="android:textSize">@dimen/size_20</item>
        <item name="android:textColor">@color/text_category_name</item>
    </style>

    <style name="StyleCategoryName14" parent="StyleTitle14">
        <item name="android:textColor">@color/text_category_name</item>
    </style>

    <style name="StyleCategoryDescription" parent="StyleTitle14">
        <item name="android:textColor">@color/description</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/margin_8</item>
        <item name="android:paddingVertical">@dimen/margin_10</item>
        <item name="android:paddingHorizontal">@dimen/margin_2</item>
    </style>

</resources>